<%= form_for([@task, @pomodoro]) do |f| %>
  <% if @pomodoro.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pomodoro.errors.count, "error") %> prohibited this pomodoro from being saved:</h2>

      <ul>
      <% @pomodoro.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :status %><br>
    <%= f.select(:status, Task::STATUSES, prompt: 'Select a status') %>
  </div>
  <div class="field">
    <%= f.label :task %><br>
    <%= f.collection_select(:task_id, Task.visible, :id, :name, :prompt => 'Select a task') %>
  </div>
  <div class="field">
    <%= f.label :started_at %><br>
    <%= f.datetime_select :started_at %>
  </div>
  <div class="field">
    <%= f.label :completed_at %><br>
    <%= f.datetime_select :completed_at %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
